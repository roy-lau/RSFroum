{
  "name": "RSFroum",
  "version": "0.2.0",
  "description": "a koa build RSFroum",
  "private": true,
  "scripts": {
    "start": "concurrently \"yarn server\" \"yarn dev\"",
    "server": "nodemon ./server/index.js",
    "server:test": "mocha ./server/test --watch -s 5s",
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "author": "roy-lau",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.30.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^5.0.0",
    "dayjs": "^1.10.4",
    "fundebug-javascript": "^0.3.5",
    "highlight.js": "^10.4.1",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.3.1",
    "koa-router": "^7.4.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "markdown-it": "^12.3.2",
    "mavon-editor": "^2.5.2",
    "mocha": "^5.0.5",
    "mongoose": "^5.13.15",
    "mysql": "^2.15.0",
    "nodemon": "^1.17.1",
    "nprogress": "^0.2.0",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.2",
    "@vue/cli-service": "^3.0.2",
    "concurrently": "^6.0.2",
    "vue-template-compiler": "^2.5.13"
  },
  "nodemonConfig": {
    "ignore": [
      "./server/test/*",
      "docs/*"
    ],
    "delay": "2500"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
